#!/usr/bin/env bash
# Starts a graphical session to the remote. Can automate further with `kscreen-doctor -j`.
host=$1
if [ "$host" = "gilgamesh-43" ]; then
	moonlight stream --resolution 2880x1800 --fps 120 gilgamesh-43 default
elif [ "$host" = "gilgamesh-44" ]; then
	moonlight stream --resolution 2880x1800 --fps 120 gilgamesh-44 default
elif [ "$host" = "gilgamesh-48" ]; then
	SDL_VIDEODRIVER=wayland scrcpy -f --tcpip=192.168.50.48 --orientation 270
elif [ "$host" = "gilgamesh-49" ]; then
	moonlight stream --resolution 2880x1800 --fps 120 gilgamesh-49 default
elif [ "$host" = "gilgamesh-52" ]; then
	SDL_VIDEODRIVER=wayland scrcpy -f --tcpip=192.168.50.52
fi
