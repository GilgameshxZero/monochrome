#!/usr/bin/env bash
# Processes all `mp4` files in `~/Downloads` via HandBrakeCLI with the "[origin] 720p [AV1|250kbps|P7]" preset.
# HandBrakeCLI only loads presets correctly if it is called from the directory containing presets.
cd ~/main.syncthing/monochrome/module/handbrake/
# -x lp is core parallelism? Maybe.
mkdir -p ~/main.syncthing/origin/local.syncthing
# Somehow using the full path and not `~` is important in the HandBrakeCLI command.
find ~/Downloads/*.webm ~/Downloads/*.mkv ~/Downloads/*.mp4 -exec bash -c 'HandBrakeCLI -x lp=32 --preset-import-file presets.json -Z "[origin] 720p [AV1|40RF|P7] [Opus|40kbps]" -i "/home/gilgamesh/Downloads/$(basename -a "$1")" -o "/home/gilgamesh/main.syncthing/origin/local.syncthing/.$(basename -a "$1").tmp.mkv" && mv "/home/gilgamesh/main.syncthing/origin/local.syncthing/.$(basename -a "$1").tmp.mkv" "/home/gilgamesh/main.syncthing/origin/local.syncthing/$(basename -a "$1").mkv" && rm -f "/home/gilgamesh/Downloads/$(basename -a "$1")"' bash {} \;
