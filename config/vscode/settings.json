{
	"debug.onTaskErrors": "abort",
	"debug.console.fontSize": 20,
	"debug.openDebug": "neverOpen",
	"debug.internalConsoleOptions": "openOnSessionStart",
	"debug.console.closeOnEnd": false,
	"debug.terminal.clearBeforeReusing": true,

	"diffEditor.ignoreTrimWhitespace": false,

	"editor.autoClosingBrackets": "languageDefined",
	"editor.rulers": [60, 80, 120],
	"editor.inlineSuggest.enabled": true,
	"editor.insertSpaces": false,
	"editor.tabSize": 2,
	"editor.fastScrollSensitivity": 10,
	"editor.folding": false,
	"editor.fontSize": 20,
	"editor.unicodeHighlight.nonBasicASCII": false,
	"editor.wordWrap": "on",
	"editor.wrappingIndent": "indent",
	"editor.minimap.enabled": false,
	"editor.experimental.asyncTokenization": true,
	"editor.stickyScroll.enabled": false,
	"editor.glyphMargin": false,
	"editor.tokenColorCustomizations": {
		"[*Light*]": {
			"keywords": {
				"fontStyle": "bold"
			}
		}
	},
	"editor.accessibilitySupport": "off",
	"editor.cursorBlinking": "solid",
	"editor.cursorSurroundingLines": 8,

	"explorer.confirmDelete": false,
	"explorer.confirmDragAndDrop": false,
	"explorer.sortOrder": "mixed",

	"extensions.ignoreRecommendations": true,
	"extensions.autoUpdate": false,
	"extensions.experimental.affinity": {
		"ms-toolsai.jupyter": 2,
		"ms-python.python": 2
	},
	"extensions.autoCheckUpdates": false,

	"files.eol": "\n",
	"files.exclude": {
		"**/.DS_Store": false,
		"**/.git": false,
		"**/.hg": false,
		"**/.svn": false
	},
	"files.insertFinalNewline": true,

	"git.enableSmartCommit": true,
	"git.openRepositoryInParentFolders": "always",
	"git.ignoreMissingGitWarning": true,

	"html.format.indentInnerHtml": true,
	"html.format.wrapLineLength": 80,

	"markdown.preview.breaks": true,
	"markdown.preview.fontSize": 16,
	"markdown.extension.print.absoluteImgPath": false,
	"markdown.extension.print.includeVscodeStylesheets": false,
	"markdown.extension.toc.unorderedList.marker": "*",
	"markdown.extension.tableFormatter.enabled": false,
	"markdown.extension.toc.updateOnSave": false,
	"markdown.copyFiles.destination": {
		"**/*": "${documentDirName}/${documentFileName}-assets/"
	},
	"markdown.extension.syntax.plainTheme": true,
	"markdown.extension.list.indentationSize": "inherit",

	"search.quickOpen.includeHistory": false,
	"search.exclude": {
		"**/.venv": true
	},

	"security.workspace.trust.untrustedFiles": "open",

	"settingsSync.ignoredSettings": ["workbench.colorTheme"],

	"task.problemMatchers.neverPrompt": {
		"shell": true
	},

	"terminal.integrated.fontSize": 20,
	"terminal.integrated.defaultProfile.windows": "Command Prompt",
	"terminal.integrated.defaultProfile.linux": "bash",
	"terminal.integrated.tabs.enabled": false,
	"terminal.integrated.enableMultiLinePasteWarning": "never",
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.gpuAcceleration": "on",
	// Closes terminals faster (on Windows); faster tasks/builds.
	"terminal.integrated.profiles.windows": {
		"Command Prompt": {
			"path": [
				"${env:windir}\\System32\\cmd.exe",
				"${env:windir}\\Sysnative\\cmd.exe"
			],
			"icon": "terminal-cmd"
		},
		"PowerShell": {
			"source": "PowerShell",
			"icon": "terminal-powershell"
		},
		"Git Bash": {
			"source": "Git Bash"
		}
	},
	"terminal.integrated.confirmOnKill": "never",
	"terminal.integrated.rightClickBehavior": "default",
	"terminal.integrated.suggest.enabled": true,
	"terminal.integrated.commandsToSkipShell": [
		"workbench.action.closeActiveEditor"
	],
	"terminal.integrated.scrollback": 65536,
	"terminal.integrated.windowsEnableConpty": false,

	"timeline.pageOnScroll": true,

	"update.showReleaseNotes": false,
	"update.mode": "manual",

	"window.autoDetectColorScheme": true,
	"window.commandCenter": false,
	"window.restoreWindows": "none",
	"window.restoreFullscreen": true,
	"window.customTitleBarVisibility": "windowed",
	"window.menuBarVisibility": "compact",

	"workbench.layoutControl.enabled": false,
	"workbench.tips.enabled": false,
	"workbench.editor.focusRecentEditorAfterClose": false,
	"workbench.editor.splitInGroupLayout": "vertical",
	"workbench.editorAssociations": {
		"*.ipynb": "jupyter-notebook",
		"*.pdf": "default"
	},
	"workbench.panel.defaultLocation": "right",
	"workbench.commandPalette.experimental.suggestCommands": true,
	"workbench.startupEditor": "none",
	"workbench.preferredHighContrastColorTheme": "Default High Contrast",
	"workbench.editor.tabSizing": "shrink",
	"workbench.list.mouseWheelScrollSensitivity": 3,

	"zenMode.restore": true,
	"zenMode.showTabs": "none",
	"zenMode.centerLayout": false,

	// Extensions.
	"C_Cpp.dimInactiveRegions": true,
	"C_Cpp.default.cppStandard": "c++17",
	"C_Cpp.autoAddFileAssociations": false,
	"C_Cpp.clang_format_fallbackStyle": "{BasedOnStyle: Chromium, UseTab: Always, TabWidth: 2, PointerAlignment: Right, NamespaceIndentation: All, FixNamespaceComments: false, AccessModifierOffset: 0, IndentCaseLabels: true, AlignAfterOpenBracket: AlwaysBreak, AlignOperands: false, ContinuationIndentWidth: 2, BinPackArguments: false, BinPackParameters: false, AlignConsecutiveDeclarations: false, AllowShortIfStatementsOnASingleLine: true, AllowShortLoopsOnASingleLine: true, AlignTrailingComments: false, ReflowComments: true, ColumnLimit: 60, IncludeBlocks: Preserve, SortUsingDeclarations: false}",
                                                                                                                                                                                                                                                                "C_Cpp.experimentalFeatures": "enabled",
		"C_Cpp.intelliSenseCacheSize": 1024,
		"C_Cpp.intelliSenseMemoryLimit": 2048,
		"workbench.colorTheme": "Eva Dark",

	"github.copilot.enable": {
		"*": true,
		"plaintext": true,
		"markdown": true,
		"scminput": false,
		"yaml": false
	},
	"github.copilot.chat.welcomeMessage": "never",
	"github.copilot.editor.enableCodeActions": false,

	"java.project.referencedLibraries": {
		"include": ["C:/Android/platforms/android-34/*.jar", "lib/*.jar"]
	},

	"jupyter.askForKernelRestart": false,
	"jupyter.interactiveWindow.textEditor.cellFolding": false,

	"markdown-mermaid.darkModeTheme": "neutral",
	"markdown-mermaid.lightModeTheme": "neutral",

	"notebook.cellToolbarLocation": {
		"default": "right",
		"jupyter-notebook": "left"
	},
	"notebook.output.wordWrap": true,
	"notebook.editorOptionsCustomizations": {
		"editor.tabSize": 4,
		"editor.indentSize": 4,
		"editor.insertSpaces": true
	},
	"notebook.output.scrolling": true,
	"notebook.confirmDeleteRunningCell": false,
	"notebook.formatOnSave.enabled": true,

	"prettier.useTabs": true,
	"prettier.trailingComma": "none",

	"redhat.telemetry.enabled": false,

	"remote.SSH.externalSSH_ASKPASS": true,
	"remote.SSH.enableRemoteCommand": true,
	// Fixes Agent forwarding, specifically on Windows -> Linux.
	"remote.SSH.useExecServer": false,
	"remote.SSH.lockfilesInTmp": true,
	"remote.SSH.remotePlatform": {
		"gilgamesh-27": "windows",
		"gilgamesh-29": "linux",
		"gilgamesh-31": "linux",
		"csail-ccg-gpu-0": "linux",
		"gcp-jailbreak-defense-shared-devbox": "linux",
		"runpod-jailbreak-defense-yang": "linux",
		"runpod-jailbreak-defense-yang-1": "linux",
		"runpod-jailbreak-defense-yang-0": "linux",
		"gilgamesh-36": "macOS",
		"runpod-jailbreak-defense-yang-3": "linux",
		"gilgamesh-38": "windows",
		"runpod-jailbreak-defense-yang-4": "linux",
		"runpod-jailbreak-defense-yang-6": "linux",
		"runpod-jailbreak-defense-yang-7": "linux",
		"runpod-jailbreak-defense-yang-8": "linux",
		"runpod-jailbreak-defense-yang-9": "linux",
		"runpod-jailbreak-defense-yang-10": "linux",
		"runpod-jailbreak-defense-jack": "linux",
		"runpod-jailbreak-defense-yang-2": "linux",
		"runpod-jailbreak-defense-yang-5": "linux",
		"gilgamesh-44": "linux",
		"gilgamesh-43": "macOS",
		"gilgamesh-42": "windows",
		"gilgamesh-45": "linux"
	},
	"remote.autoForwardPorts": false,

	"xml.format.maxLineWidth": 80,

	// Formatters.
	"[css]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "ms-vsliveshare.vsliveshare"
	},
	"[markdown]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.cursorWidth": 1,
		"editor.occurrencesHighlight": "off",
		"editor.rulers": [],
		"editor.wrappingStrategy": "advanced"
	},
	"[cpp]": {
		"editor.defaultFormatter": "ms-vscode.cpptools"
	},
	"[javascript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[python]": {
		"editor.defaultFormatter": "ms-python.black-formatter",
		"editor.insertSpaces": true,
		"editor.tabSize": 4
	},
	"[xml]": {
		"editor.defaultFormatter": "redhat.vscode-xml"
	},
	"[java]": {
		"editor.defaultFormatter": "redhat.java"
	},
	"[typescript]": {
		"editor.defaultFormatter": "ms-vsliveshare.vsliveshare"
	},
	"cSpell.userWords": [
		"aeterna",
		"ARGB",
		"Astrum",
		"cooldown",
		"Datapoint",
		"Erlijan",
		"everwinter",
		"Felysia",
		"Fonte",
		"logit",
		"openai",
		"tqdm",
		"xdpi",
		"xena",
		"Xfermode",
		"ydpi"
	],
}
