<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.freac.org/boca/component.dtd">
<component>
  <name>Digital Speech Standard Decoder</name>
  <version>1.0</version>
  <id>ffmpeg-dss-dec</id>
  <type>decoder</type>
  <format>
    <name>DSS Files</name>
    <extension>dss</extension>
  </format>
  <external>
    <command>ffmpeg</command>
    <arguments>-i %INFILE %OPTIONS -f wav -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
  </external>
  <external>
    <command>avconv</command>
    <arguments>-i %INFILE %OPTIONS -f wav -</arguments>
    <mode>stdio</mode>
    <outformat>wave</outformat>
  </external>
</component>
