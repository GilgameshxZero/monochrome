<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "http://www.freac.org/boca/component.dtd">
<component>
  <name>Shorten Lossless Encoder</name>
  <version>1.0</version>
  <id>shn-enc</id>
  <type>encoder</type>
  <format>
    <name>Shorten Audio</name>
    <lossless>true</lossless>
    <extension>shn</extension>
  </format>
  <input bits="8" signed="false"/>
  <input bits="16"/>
  <external>
    <command ignoreExitCode="true">shorten</command>
    <arguments>%OPTIONS %INFILE %OUTFILE</arguments>
    <mode>file</mode>
    <informat>wave</informat>
  </external>
</component>
